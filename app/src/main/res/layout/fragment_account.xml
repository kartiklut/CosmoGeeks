<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="72dp">

        <ImageView
            android:id="@+id/header_cover_image"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:background="#2F363F"
            />

        <ImageView
            android:id="@+id/user_profile_photo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@+id/header_cover_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-60dp"
            android:background="@drawable/profile_circular_border_imageview"
            android:elevation="5dp"
            android:padding="20dp"
            android:src="@drawable/ic_person_outline_black_24dp"
            android:scaleType="centerCrop"/>

        <RelativeLayout
            android:id="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header_cover_image"
            android:background="#777E8B"
            android:elevation="4dp"
            android:paddingBottom="24dp">





            <TextView
                android:id="@+id/user_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="76dp"
                android:text="John Doe"
                android:textColor="#E1DA00"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/user_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_profile_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text="johndoe@fake.com"
                android:textColor="#fff"
                android:textSize="14sp" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_layout"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#4C4B4B"
                android:clickable="true"
                android:elevation="4dp"
                android:padding="20dp"
                android:textColor="#DAE0E2"
                android:id="@+id/payment"
                android:textStyle="bold"
                android:textSize="22dp"
                android:drawableLeft="@drawable/ic_payment_black_24dp"
                android:text="Payment" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:background="#4C4B4B"
                android:clickable="true"
                android:elevation="4dp"
                android:padding="20dp"
                android:id="@+id/rateus"
                android:textColor="#DAE0E2"
                android:textStyle="bold"
                android:textSize="22dp"
                android:drawableLeft="@drawable/ic_star_black_24dp"
                android:text="Rate Us" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#4C4B4B"
                android:clickable="true"
                android:id="@+id/feedback"
                android:textColor="#DAE0E2"
                android:textStyle="bold"
                android:textSize="22dp"
                android:drawableLeft="@drawable/ic_feedback_black_24dp"
                android:elevation="4dp"
                android:padding="20dp"
                android:text="FeedBack" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginBottom="3dp"
                android:textColor="#DAE0E2"
                android:textStyle="bold"
                android:id="@+id/aboutus"
                android:textSize="22dp"
                android:layout_marginTop="3dp"
                android:background="#4C4B4B"
                android:clickable="true"
                android:drawableLeft="@drawable/ic_info_outline_black_24dp"
                android:elevation="4dp"
                android:padding="20dp"
                android:text="About us" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginBottom="3dp"
                android:textColor="#DAE0E2"
                android:textStyle="bold"
                android:id="@+id/share"
                android:textSize="22dp"
                android:layout_marginTop="3dp"
                android:background="#4C4B4B"
                android:clickable="true"
                android:drawableLeft="@drawable/ic_share_black_24dp"
                android:elevation="4dp"
                android:padding="20dp"
                android:text="Share" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#777E8B"
                android:textColor="#F3B63A"
                android:textStyle="bold"
                android:textSize="22dp"
                android:clickable="true"
                android:elevation="4dp"
                android:padding="20dp"
                android:id="@+id/logout"
                android:drawableLeft="@drawable/ic_exit_to_app_black_24dp"
                android:text="Logout" />
        </LinearLayout>
    </RelativeLayout>

</androidx.core.widget.NestedScrollView>