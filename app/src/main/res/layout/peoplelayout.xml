<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="110dp">



    <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:neomorph_view_type="rectangular"
        app:neomorph_shadow_type="outer"
        app:neomorph_corner_radius="10dp"
        app:neomorph_shadow_color="#616C6F"
        app:neomorph_highlight_color="#2C3335"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        >
        <TextView
            android:id="@+id/craft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="      Craft "
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:singleLine="true"
            android:layout_margin="5dp"
            android:textColor="#979E1E" />
        <TextView
            android:id="@+id/craftName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="**** "
            android:layout_toRightOf="@+id/craft"
            android:textStyle="bold"
            android:singleLine="true"
            android:layout_margin="5dp"
            android:textColor="#019031" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="35dp"
                android:text="Name :    "
                android:textStyle="bold"
                android:singleLine="true"
                android:textColor="#979E1E" />

            <TextView
                android:id="@+id/peopleName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="****"
                android:textStyle="bold"
                android:singleLine="true"
                android:textColor="#019031" />
        </LinearLayout>
    </RelativeLayout>

    </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>
</LinearLayout>